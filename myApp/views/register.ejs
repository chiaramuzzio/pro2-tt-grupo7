<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include("./partials/head") %>

<body>
	<!-- Header -->
	<%- include("./partials/header") %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Registrate</h2>
			</div>
			<!-- Muestra los "ultimos" productos -->
			<form action="/users/register" method="get">
				<label for="email">Email:</label><br>
				<input type="email" id="email" name="email" required><br>
			 
				<label for="username">Usuario:</label><br>
				<input type="text" id="username" name="username" required><br>
			 
				<label for="password">Contraseña:</label><br>
				<input type="password" id="password" name="password" required><br>
			 
				<label for="birthdate">Fecha de nacimiento:</label><br>
				<input type="date" id="birthdate" name="birthdate" required><br>
			 
				<label for="document_number">Número de documento:</label><br>
				<input type="number" id="document_number" name="document_number" required><br>
			 
				<label for="profile_picture">Foto de perfil:</label><br>
				<input type="text" id="profile_picture" name="profile_picture"><br>
			 
				<input type="submit" value="Registrarse">
			  </form>
			


	<!-- footer -->
	<%- include("./partials/footer") %>

	<!-- /footer -->
</body>

</html>