<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
	<%- include("./partials/head") %>

	<body>
		<!-- Header -->
		<%- include("./partials/header") %>
		<!-- /Header -->
		
		<!-- Banner -->
		<div class="banner">
			<img src="/images/users/banner.png">
		</div>
		<!-- /Banner -->

		<!-- Novedades -->
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Novedades</h2>
				</div>
				<% productos.forEach(function(producto, index) { %>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/product/id/<%= producto.id %>">
								<figure class="product-box_image">
									<img class="fotoIndex" src=<%= producto.imagenProd %>>
								</figure>
								<article class="product-box_data">
									<h2><%= producto.nombreProd %></h2>
									<p><%= producto.descripcion %></p>
									<p>Comentarios: 0</p> <!--despues cuando veamos como relacionar hay q modificar la cant y que sea dinamica -->
								</article>
							</a>
						</section>
					</div>
				<% }); %>

				<!-- Show the "ultimos" productos -->


			</div>
		</div>
		<!-- /Novedades -->
		<!-- Más comentados -->
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Más comentados</h2>
				</div>
				<!-- Show the "ultimos" productos -->
				<% productos.forEach(function(producto, index) { %>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/product/<%= producto.id %>">
								<figure class="product-box_image">
									<img class="fotoIndex" src=<%= producto.imagenProd %>>
								</figure>
								<article class="product-box_data">
									<h2><%= producto.nombreProd %></h2>
									<p><%= producto.descripcion %></p>
									<p>Comentarios: 0</p>
								</article>
							</a>
						</section>
					</div>
				<% }); %>
			</div>
		</div>

		<!-- /Más comentados -->


		<!-- footer -->
		<%- include("./partials/footer") %>
		<!-- /footer -->
		
	</body>	

</html>