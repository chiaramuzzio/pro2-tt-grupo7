<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include("./partials/head") %>

<body>
	<!-- Header -->
	<%- include("./partials/header") %>
	<!-- /Header -->

	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"><%= productos.nombreProd%></h2> 
			<p class="product-detail-description">
				<form action="/product/editProduct" method="post">
					<input type="hidden" name="id" value="<%= productos.id%>">
					<button class="btn-special btn-red" type="submit"><a>Editar</a></button>
				</form>  
				<a>‎ ‎ </a>
				<form action="/product/delete" method="post">
					<input type="hidden" name="id" value="<%= productos.id%>">
					<button class="btn-special btn-red" type="submit"><a>Eliminar</a></button>
				</form>  
				<!-- ACA HABRÍA QUE PONER UN CONDICIONAL QUE SI EL PRODUCTO QUE 
				SE ESTA VIENDO ES DEL USUARIO SE PUEDA EDITAR, SINO QUE NO MUESTRE LA OPCION -->
			</p>
		</div>

		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src=<%= productos.imagenProd%> alt="" class="product-detail-img">
					<p class="product-detail-description"><%= productos.descripcion %></p>
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">
						<% comentarios.forEach(function(comentario, index) { %>
							<!-- luis dijo que cambie el forEach por for, NO TE OLVIDES PLS!! -->
							<article>
								<!-- <img src="PONER LINK CUANDO VEAMOS CROSS REFERENCE (?)" alt=""> -->
								<div class="data">
									<p class="user">
										<strong> <a href="/users/profile"><%= comentario.clienteId %></a> </strong>
										<%= comentario.comentario %>
									</p>
								</div>
							</article>
						<% }); %>					
					</section>
					<form class="form" action="/product/id/<%= productos.id %>" method="get">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button botonComentario">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	
	<!-- /product detail -->

	<!-- footer -->
	<%- include("./partials/footer") %>
	<!-- /footer -->

</body>	
</html>