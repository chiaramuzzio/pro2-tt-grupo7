<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include("./partials/head") %>


<body>
    <!-- Header -->
	<% if (locals.user != undefined) { %>
		<%- include("./partials/headerLogueado") %>
	<% } else { %>
		<%- include("./partials/header") %>
	<% } %>
    <!-- /Header -->

    <!-- Datos del usuario -->
    <section class="info-usuario container products-wrapper">
        <div class="row">
            <div class="img-container offset-3 col-2">
                <img src=<%= usuario.foto %> alt="foto de perfil" class="foto-perfil">
            </div>
            <div class="data-container col-6">
                <div class="d-flex align-items-center ">
                    <h1 class="main-title"><%= usuario.usuario %>
                        
                        <% if (id != undefined && id == usuario.id) { %>
                            <a href="/users/edit">
                            <i class="fas fa-cog"></i>
                            </a>
                        <% } %>
                        
                    </h1>
                    <a class="followBoton btn mt-3 ml-4" href="">SEGUIR</a>
                </div>
                <div>
                    <p><%= usuario.mail %></p>
                    <ul class="">
                        <li><%= productos.length %> productos</li>
                        <li>200 seguidores</li>
                        <li><%= comentarios %> comentarios</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
    <!-- /Datos del usuario -->

    <!-- Mis productos -->
    <div class="container products-wrapper">
        <div class="row">
            <div class="col-12">
                <h2 class="products-title">Mis productos</h2>
            </div>
            <!-- Show the "ultimos" products -->
            <% productos.forEach((p, index) => { %>
                <div class="col-12 col-sm-6 col-lg-3">
                    <section class="product-box">
                        <a href="/product/id/<%= p.id %>">
                            <figure class="product-box_image">
                                <img class="fotoIndex" src=<%= p.imagenProd %>>
                            </figure>
                            <article class="product-box_data">
                                <h2><%= p.nombreProd %></h2>
                                <p><%= p.descripcion %></p>
                                <p>Comentarios: 0</p>
                            </article>
                        </a>
                    </section>
                </div>
            <% }); %>
        </div>
    </div>
    <!-- /Mis productos -->

    <!-- footer -->
    <%- include("./partials/footer") %>
    <!-- /footer -->
</body>
</html>