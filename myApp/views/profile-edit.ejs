<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include("./partials/head") %>

<body>
	<!-- Header -->
	<%- include("./partials/headerLogueado") %>

	<!-- /Header -->

	<!-- Novedades -->

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Editar mi perfil</h2>
			</div>
			<!-- Muestra los "ultimos" productos -->
			<form class="formPropio formRegister" action="/users/edit" method="get">
				<label class="form-label" for="email">Email</label><br>
				<input class="form-input" type="email" id="email" name="email" value="" placeholder="usuario@ejemplo.com" required><br>
			   
				<label class="form-label" for="username">Usuario</label><br>
				<input class="form-input" type="text" id="username" name="username" value="" placeholder="usuario123" required><br>
			   
				<label class="form-label" for="password">Nueva Contraseña</label><br>
				<input class="form-input" type="text" id="password" name="password" placeholder="contraseña"> <br>
			   
				<label class="form-label" for="birthdate">Fecha de nacimiento</label><br>
				<input class="form-input" type="date" id="birthdate" name="birthdate" value=""  required><br>
			   
				<label class="form-label" for="document_number">Número de documento</label><br>
				<input class="form-input" type="number" id="document_number" name="document_number" value="" placeholder="123456789" required><br>
			   
				<label class="form-label" for="profile_picture">Foto de perfil</label><br>
				<input class="form-input file-select" type="file" id="profile_picture" name="profile_picture"><br>
			   
				<a class="buy-now-button botonRegister" href="/users/profile">Guardar cambios</a>
			</form>
		</div>
	</div>

	<!-- footer -->
	
	<%- include("./partials/footer") %>

	<!-- /footer -->
</body>

</html>